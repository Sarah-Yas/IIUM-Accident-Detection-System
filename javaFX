public class SensorGUI extends Application {

    private TextField impactForceField;
    private TextField vehicleSpeedField;
    private TextField numberOfVictimsField;
    private CheckBox isNightTimeCheckBox;
    private TextArea outputArea;

    @Override
    public void start(Stage primaryStage) {
        // Input Section
        impactForceField = new TextField();
        vehicleSpeedField = new TextField();
        numberOfVictimsField = new TextField();
        isNightTimeCheckBox = new CheckBox("Is Night Time?");

        Button sendButton = new Button("Send to AI Engine");
        sendButton.setOnAction(e -> sendData());

        outputArea = new TextArea();
        outputArea.setEditable(false);

        GridPane inputGrid = new GridPane();
        inputGrid.setPadding(new Insets(10));
        inputGrid.setHgap(10);
        inputGrid.setVgap(10);

        inputGrid.add(new Label("Impact Force:"), 0, 0);
        inputGrid.add(impactForceField, 1, 0);
        inputGrid.add(new Label("Vehicle Speed (km/h):"), 0, 1);
        inputGrid.add(vehicleSpeedField, 1, 1);
        inputGrid.add(new Label("Number of Victims:"), 0, 2);
        inputGrid.add(numberOfVictimsField, 1, 2);
        inputGrid.add(isNightTimeCheckBox, 1, 3);
        inputGrid.add(sendButton, 1, 4);

        VBox root = new VBox(10, inputGrid, outputArea);
        root.setPadding(new Insets(10));

        Scene scene = new Scene(root, 400, 350);
        primaryStage.setTitle("Sensor Subsystem");
        primaryStage.setScene(scene);
        primaryStage.show();
    }

    private void sendData() {
        try {
            double impactForce = Double.parseDouble(impactForceField.getText());
            int vehicleSpeed = Integer.parseInt(vehicleSpeedField.getText());
            int numberOfVictims = Integer.parseInt(numberOfVictimsField.getText());
            boolean isNightTime = isNightTimeCheckBox.isSelected();

            AIEngine engine = new AIEngine();
            int severity = engine.analyzeImpactData(impactForce, vehicleSpeed, numberOfVictims, isNightTime);

            String result = "Data sent to AI Engine...\n" +
                    "Impact Force: " + impactForce + "\n" +
                    "Vehicle Speed: " + vehicleSpeed + "\n" +
                    "Number of Victims: " + numberOfVictims + "\n" +
                    "Night Time: " + isNightTime + "\n" +
                    "Severity Score: " + severity + "\n";
            outputArea.setText(result);

        } catch (NumberFormatException ex) {
            outputArea.setText("Please enter valid numeric values.");
        }
    }

    public static void main(String[] args) {
        launch(args);
    }
}

class AIEngine {
    public int analyzeImpactData(double impactForce, int vehicleSpeed, int numberOfVictims, boolean isNightTime) {
        int severityScore = (int)(impactForce * 2 + vehicleSpeed * 1.5 + numberOfVictims * 10);
        if (isNightTime) {
            severityScore += 5; // increase severity if night time
        }
        return severityScore;
    }
} 
